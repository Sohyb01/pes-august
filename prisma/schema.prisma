// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Certificate {
  id String @id
  studentName String
  imgUrl String
}

model QuestionData{
  id Int @id @default(autoincrement())
  mobileNumber String
  message String
}

model ParentApplicationData {
  applicationId Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  studentName String
  studentAge Int
  parentEmail String
  parentMobile String
  studentEmail String?
  studentMobile String?
  studentGender Gender
  studentHasLaptop YesOrNo
}

model StudentApplicationData {
  applicationId Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  studentName String
  studentUniversity String
  studentFaculty String
  studentAcademicYear String
  studentEmail String
  studentMobile String
  studentAdditionalMessage String?
}

model User {
  email    String @unique
  password String
  role Role @default(USER)
}

enum Role {
  USER
  ADMIN
}

enum Gender {
  Boy
  Girl
}
enum YesOrNo {
  Yes
  No
}