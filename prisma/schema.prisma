// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Certificate {
  id String @id
  studentName String
  imgUrl String
}

model ApplicationData {
  applicationId String @id @default(uuid())
  createdAt DateTime @default(now())
  studentName String
  studentAge Int
  parentEmail String
  parentMobile String
  studentEmail String?
  studentMobile String?
  studentGender Gender
  studentHasLaptop YesOrNo
}

model User {
  email    String @unique
  password String
  role Role @default(USER)
}

enum Role {
  USER
  ADMIN
}

enum Gender {
  Boy
  Girl
}
enum YesOrNo {
  Yes
  No
}